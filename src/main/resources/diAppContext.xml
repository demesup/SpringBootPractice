<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:musicPlayer.properties"/>

    <bean id="musicBean"
          class="disetter.utils.music.ClassicalMusicDI">
    </bean>

    <bean id="musicPlayer"
          class="disetter.utils.MusicPlayerDI">
        <property name="music" ref="musicBean"/>
        <property name="name" value="${musicPlayer.name}"/>
        <property name="volume" value="${musicPlayer.volume}"/>
    </bean>

    <bean id="musicListPlayer"
          class="disetter.utils.MusicListPlayer">
        <property name="musicDIList">
            <list>
                <bean id="classical" class="disetter.utils.music.ClassicalMusicDI"/>
                <bean id="rock" class="disetter.utils.music.RockMusicDI"/>
                <bean id="kpop" class="disetter.utils.music.KPOPMusicDI"/>
            </list>
        </property>
        <property name="name" value="${musicPlayer.name}"/>
        <property name="volume" value="${musicPlayer.volume}"/>
    </bean>
</beans>